    <section class="featured-blog mtb-40">
    	<div class="container">
    		<div class="row">
				<% d.forEach((item)=>{ %>
					<div class="col-md-4">
    				<div class="blog-box">
    					<img src="<%= item.image.url %>" height="233px" width="350px" alt="blog1" />
    					<h3><%= item.title %></h3>
						<p> <%=item.createdAt.toLocaleDateString() %></p>
						<!-- date year month ke liye -->
						<p><%= item.description.slice(0,120) %></p>
						<!-- slice description ka content small krne k liye -->
    					<a href="/blogdetail/<%= item.id %>" class="btn a">Read more...</a>
    				</div>
    			</div>
			<%}) %>
    	</div>
	</div>
</div>
	
    </section>
